<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bw_background"
    tools:context=".MainActivity">

    <!-- Professional Title Bar with Logo -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/bw_primary_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo in Title Bar -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/secure"
            android:contentDescription="App Logo"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GetIntruder"
                android:textColor="@color/bw_button_text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Monitoring"
                android:textColor="@color/bw_button_text"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:alpha="0.8"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:padding="8dp"
            android:tint="@color/bw_button_text"
            android:src="@android:drawable/ic_menu_preferences" />
    </LinearLayout>

    <!-- Main Content Scroll View -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- How It Works Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bw_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:layout_marginEnd="12dp"
                            android:tint="@color/bw_accent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="How It Works"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/bw_primary_text"
                            android:letterSpacing="0.01"/>

                    </LinearLayout>

                    <!-- Step 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:background="@color/bw_input_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/bw_button_text"
                            android:background="@color/bw_primary_button"
                            android:gravity="center"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Enable Device Admin"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/bw_primary_text"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Grant permission to monitor failed unlock attempts on your device"
                                android:textSize="14sp"
                                android:textColor="@color/bw_secondary_text"
                                android:lineSpacingExtra="2dp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Step 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:background="@color/bw_input_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="2"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/bw_surface"
                            android:background="@android:color/holo_blue_dark"
                            android:gravity="center"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Automatic Photo Capture"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/bw_primary_text"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="When wrong PIN/password is entered, front camera secretly captures intruder's photo"
                                android:textSize="14sp"
                                android:textColor="@color/bw_secondary_text"
                                android:lineSpacingExtra="2dp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Step 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:background="@color/bw_input_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="3"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/bw_surface"
                            android:background="@android:color/holo_blue_dark"
                            android:gravity="center"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Secure Storage"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/bw_primary_text"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Photos are securely stored on your device and optionally backed up to cloud"
                                android:textSize="14sp"
                                android:textColor="@color/bw_secondary_text"
                                android:lineSpacingExtra="2dp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Privacy Note -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/bw_input_background"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_secure"
                            android:layout_marginEnd="10dp"
                            android:tint="#10B981" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100% Private - Photos stay on your device unless you choose cloud backup"
                            android:textSize="12sp"
                            android:textColor="#059669"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Security Status Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/bw_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_lock_idle_lock"
                            android:layout_marginEnd="12dp"
                            android:tint="@color/bw_accent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Detection Status"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/bw_primary_text"
                            android:letterSpacing="0.01"/>

                    </LinearLayout>

                    <!-- Status Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Intruder detection is INACTIVE"
                            android:textSize="16sp"
                            android:textColor="@color/bw_surface"
                            android:gravity="center"
                            android:padding="20dp"
                            android:background="@color/bw_secondary_text"
                            android:textStyle="bold"
                            android:letterSpacing="0.01"/>

                    </LinearLayout>

                    <!-- Action Button -->
                    <Button
                        android:id="@+id/enableButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Enable Detection"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/bw_surface"
                        android:background="@android:color/holo_blue_bright"
                        android:elevation="2dp"
                        android:letterSpacing="0.02"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Statistics Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/bw_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            android:layout_marginEnd="12dp"
                            android:tint="@color/bw_accent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Statistics"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/bw_primary_text"
                            android:letterSpacing="0.01"/>

                    </LinearLayout>

                    <!-- Stats Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Photos Count -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/bw_background">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@android:drawable/ic_menu_camera"
                                android:layout_marginBottom="8dp"
                                android:tint="@color/bw_accent" />

                            <TextView
                                android:id="@+id/photosCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/bw_primary_text"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Photos Captured"
                                android:textSize="12sp"
                                android:textColor="@color/bw_secondary_text"
                                android:gravity="center"/>

                        </LinearLayout>

                        <!-- Last Capture -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_marginStart="8dp"
                            android:background="@color/bw_background">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                android:layout_marginBottom="8dp"
                                android:tint="@color/bw_accent" />

                            <TextView
                                android:id="@+id/lastCaptureText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Never"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/bw_primary_text"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Capture"
                                android:textSize="12sp"
                                android:textColor="@color/bw_secondary_text"
                                android:gravity="center"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Actions Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/bw_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:layout_marginEnd="12dp"
                            android:tint="@color/bw_accent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Actions"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/bw_primary_text"
                            android:letterSpacing="0.01"/>

                    </LinearLayout>

                    <!-- Action Buttons -->
                    <Button
                        android:id="@+id/viewPhotosButton"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="ðŸ“¸ View Intruder Photos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/bw_accent"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_marginBottom="12dp"
                        android:letterSpacing="0.01"/>

                    <Button
                        android:id="@+id/cloudBackupButton"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="â˜ï¸ Cloud Backup &amp; Sync"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#10B981"
                        android:background="?android:attr/selectableItemBackground"
                        android:letterSpacing="0.01"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
